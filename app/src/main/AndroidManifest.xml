<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wazapaypersonal">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/ModuleTheme">
        <activity android:name=".Verification.VerificationActivity"></activity>
        <activity android:name=".ResetPassword" />
        <activity android:name=".ForgotPassword" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".Onboarding.Onboarding" />
        <activity
            android:name=".Registration.PersonalAccountActivity"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />
        <activity android:name=".Dashboard.HomeDashboard" />
        <activity
            android:name=".Merchant_Listing.MerchantListingActivity"
            android:theme="@style/ModuleTheme" />
        <activity
            android:name=".Agent_Listing.AgentActivity"
            android:theme="@style/ModuleTheme" />
        <activity
            android:name=".Contacts.ContactsActivity"
            android:theme="@style/ModuleTheme" />
    </application>

</manifest>