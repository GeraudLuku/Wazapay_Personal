<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="center"
    android:layout_weight="1">



    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/backgroud_background"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!-- 250 size cardview holding image-->

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="100dp"
                android:outlineSpotShadowColor="#123"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/local_cashiers"
                    android:id="@+id/onBoardingTabImageView"
                    />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="Local Cashiers"
                android:layout_marginBottom="10dp"
                android:id="@+id/onBoardingTabTitleTextView"
                android:padding="26dp"/>

        </LinearLayout>


    </FrameLayout>

    <!--space helps create white space around text-->
    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />



    <!--Textview holding descriptive text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#626263"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:id="@+id/onBoardingTabDescriptiveTextView"
        android:text="But I must explain to you how all this mistaken ideaof denouncing pleasure and praising pain was born and I will give you"/>


    <!--space helps create white space around text-->
    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />





</LinearLayout>


